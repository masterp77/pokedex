<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/target_gradient"
    tools:context="com.example.marcos.pokedex.Main2Activity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorTarget">

        <AbsoluteLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cvinfo2">

            <ImageView
                android:id="@+id/iVPoke"
                android:layout_width="129dp"
                android:layout_height="119dp"
                android:layout_x="19dp"
                android:layout_y="17dp"
                android:layout_margin="5dp"
                android:background="#ff9501"
                android:padding="1dp"
                app:srcCompat="@android:drawable/picture_frame" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="166dp"
                android:layout_y="29dp"
                android:drawSelectorOnTop="true"
                android:typeface="serif"
                android:inputType="textMultiLine"
                android:ems="10"
                android:longClickable="true"
                android:textStyle="bold"
                android:shadowDx="3"
                android:shadowDy="2"
                android:shadowRadius="1.8"
                android:textColor="#ffffff"
                android:text="Nombre:" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="166dp"
                android:layout_y="60dp"
                android:drawSelectorOnTop="true"
                android:typeface="serif"
                android:inputType="textMultiLine"
                android:ems="10"
                android:longClickable="true"
                android:textStyle="bold"
                android:shadowDx="3"
                android:shadowDy="2"
                android:shadowRadius="1.8"
                android:textColor="#ffffff"
                android:text="Id:" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="163dp"
                android:layout_y="93dp"
                android:drawSelectorOnTop="true"
                android:typeface="serif"
                android:inputType="textMultiLine"
                android:ems="10"
                android:longClickable="true"
                android:textStyle="bold"
                android:shadowDx="3"
                android:shadowDy="2"
                android:shadowRadius="1.8"
                android:textColor="#ffffff"
                android:text="Peso:" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="163dp"
                android:layout_y="122dp"
                android:drawSelectorOnTop="true"
                android:typeface="serif"
                android:inputType="textMultiLine"
                android:ems="10"
                android:longClickable="true"
                android:textStyle="bold"
                android:shadowDx="3"
                android:shadowDy="2"
                android:shadowRadius="1.8"
                android:textColor="#ffffff"
                android:text="Altura:" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="139dp"
                android:layout_y="294dp"
                android:background="@color/colorPrimary"
                android:textColor="#ffffff"
                android:onClick="regresar"
                android:textStyle="bold"
                android:text="Regresar" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="22dp"
                android:layout_y="180dp"
                android:drawSelectorOnTop="true"
                android:typeface="serif"
                android:inputType="textMultiLine"
                android:ems="10"
                android:longClickable="true"
                android:textStyle="bold"
                android:shadowDx="3"
                android:shadowDy="2"
                android:shadowRadius="1.8"
                android:textColor="#ffffff"
                android:text="Habilidades:" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="22dp"
                android:layout_y="149dp"
                android:drawSelectorOnTop="true"
                android:typeface="serif"
                android:inputType="textMultiLine"
                android:ems="10"
                android:longClickable="true"
                android:textStyle="bold"
                android:shadowDx="3"
                android:shadowDy="2"
                android:shadowRadius="1.8"
                android:textColor="#ffffff"
                android:text="Tipo:" />

            <TextView
                android:id="@+id/tVNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="234dp"
                android:layout_y="29dp"
                android:textStyle="bold"
                android:textColor="#00f7ff"
                android:text="             -             "
                android:textAllCaps="true" />

            <TextView
                android:id="@+id/tVId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="235dp"
                android:layout_y="59dp"
                android:textStyle="bold"
                android:textColor="#00f7ff"
                android:text="    -      "
                android:textAllCaps="true" />

            <TextView
                android:id="@+id/tVPeso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="235dp"
                android:layout_y="93dp"
                android:textStyle="bold"
                android:textColor="#00f7ff"
                android:text="    -    " />

            <TextView
                android:id="@+id/tVAltura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="235dp"
                android:layout_y="123dp"
                android:textStyle="bold"
                android:textColor="#00f7ff"
                android:text="      -      " />

            <TextView
                android:id="@+id/tVTipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="116dp"
                android:layout_y="149dp"
                android:textStyle="bold"
                android:textColor="#00f7ff"
                android:text="           -             "
                android:textAllCaps="true" />

            <TextView
                android:id="@+id/tVHabilidades"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="116dp"
                android:layout_y="180dp"
                android:textStyle="bold"
                android:textColor="#00f7ff"
                android:text="          -          "
                android:textAllCaps="true" />

        </AbsoluteLayout>
    </android.support.v7.widget.CardView>

</AbsoluteLayout>
